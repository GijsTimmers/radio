import time
import threading
from colorama import Fore, Style

###############################################################################
def ok():
    print Style.BRIGHT + Fore.GREEN + "OK" + Fore.RESET + Style.RESET_ALL
def error():
    print Style.BRIGHT + Fore.RED + "ERROR" + Fore.RESET + Style.RESET_ALL

###############################################################################
print "Imports testen...",
try:
    from yamlradio import yamlradio
    ok()
except Exception as e:
    error()
    print e.message, e.args
###############################################################################
print "Radio() instantiÃ«ren...",
try:
    rd = yamlradio.Radio()
    ok()
except Exception as e:
    error()
    print e.message, e.args
###############################################################################
print "Variabelen testen...",
try:
    pa = yamlradio.Parser()
    ok()
except Exception as e:
    error()
    print e.message, e.args
###############################################################################
print "Afspeelmechanisme testen..."
try:
    afkortingenlijst = [combinatie["afk"] for combinatie \
    in pa.zenderdict]
        
    for combinatie in pa.zenderdict:
        naam = combinatie["naam"]
        url  = combinatie["url"]
        
        t = threading.Thread(target=rd.afspelen, args=(naam, url))
        t.start()
        time.sleep(3)
        rd.stoppen()
        t.join()
        ok()
        
except Exception as e:
    error()
    print e.message, e.args
